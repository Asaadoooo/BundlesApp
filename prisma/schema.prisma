generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Bundle {
  id                     String            @id @default(cuid())
  shop                   String
  title                  String
  description            String?
  handle                 String
  type                   String
  status                 String            @default("draft")
  compareAtPrice         Float?
  price                  Float?
  discountType           String?
  discountValue          Float?
  showCompareAtPrice     Boolean           @default(true)
  showSavingsAmount      Boolean           @default(true)
  showSavingsPercent     Boolean           @default(false)
  trackInventory         Boolean           @default(true)
  continueWhenOutOfStock Boolean           @default(false)
  minProducts            Int?
  maxProducts            Int?
  allowDuplicates        Boolean           @default(true)
  applyToSameProduct     Boolean           @default(false)
  combineWithDiscounts   Boolean           @default(false)
  startDate              DateTime?
  endDate                DateTime?
  metaTitle              String?
  metaDescription        String?
  imageUrl               String?
  shopifyProductId       String?
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt
  analytics              BundleAnalytics[]
  categories             BundleCategory[]
  items                  BundleItem[]
  tiers                  BundleTier[]
  volumeRules            VolumeRule[]

  @@unique([shop, handle])
  @@index([shop])
  @@index([status])
  @@index([type])
}

model BundleItem {
  id               String          @id @default(cuid())
  bundleId         String
  shopifyProductId String
  shopifyVariantId String?
  productTitle     String
  variantTitle     String?
  productImage     String?
  sku              String?
  quantity         Int             @default(1)
  position         Int             @default(0)
  isRequired       Boolean         @default(true)
  originalPrice    Float?
  discountedPrice  Float?
  categoryId       String?
  minQuantity      Int             @default(0)
  maxQuantity      Int?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  category         BundleCategory? @relation(fields: [categoryId], references: [id])
  bundle           Bundle          @relation(fields: [bundleId], references: [id], onDelete: Cascade)

  @@index([bundleId])
  @@index([shopifyProductId])
  @@index([categoryId])
}

model BundleCategory {
  id          String       @id @default(cuid())
  bundleId    String
  name        String
  description String?
  position    Int          @default(0)
  minSelect   Int          @default(0)
  maxSelect   Int?
  imageUrl    String?
  collapsed   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  bundle      Bundle       @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  items       BundleItem[]

  @@index([bundleId])
}

model BundleTier {
  id              String   @id @default(cuid())
  bundleId        String
  name            String
  description     String?
  position        Int      @default(0)
  price           Float
  compareAtPrice  Float?
  productCount    Int
  allowedProducts String?
  featured        Boolean  @default(false)
  badgeText       String?
  imageUrl        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  bundle          Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)

  @@index([bundleId])
}

model VolumeRule {
  id            String   @id @default(cuid())
  bundleId      String
  minQuantity   Int
  maxQuantity   Int?
  discountType  String
  discountValue Float
  label         String?
  position      Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  bundle        Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)

  @@index([bundleId])
}

model BundleAnalytics {
  id                String   @id @default(cuid())
  bundleId          String
  date              DateTime
  views             Int      @default(0)
  addToCartCount    Int      @default(0)
  purchaseCount     Int      @default(0)
  revenue           Float    @default(0)
  uniqueVisitors    Int      @default(0)
  conversionRate    Float    @default(0)
  averageOrderValue Float    @default(0)
  averageDiscount   Float    @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  bundle            Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)

  @@unique([bundleId, date])
  @@index([bundleId])
  @@index([date])
}

model BundlePurchase {
  id                String   @id @default(cuid())
  bundleId          String
  shop              String
  shopifyOrderId    String
  shopifyCustomerId String?
  quantity          Int
  unitPrice         Float
  totalPrice        Float
  discountAmount    Float
  tierName          String?
  selectedItems     String?
  purchasedAt       DateTime @default(now())

  @@index([bundleId])
  @@index([shop])
  @@index([purchasedAt])
}

model BundleInventorySnapshot {
  id              String   @id @default(cuid())
  bundleId        String
  isAvailable     Boolean
  availableCount  Int
  limitingProduct String?
  limitingVariant String?
  limitingStock   Int?
  checkedAt       DateTime @default(now())

  @@index([bundleId])
  @@index([checkedAt])
}
